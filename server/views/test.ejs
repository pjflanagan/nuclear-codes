<body ng-app="nuclear-codes-test">
  <div class="controller" ng-controller="testController" ng-init="init()">
    <div class="header">
      <h1>nuclear-codes-test</h1>
      <form ng-submit="addRoom()" class="form-row">
        <label>Game Room Name:</label>
        <input type="text" ng-model="state.roomName" />
        <label>Players:</label>
        <input type="number" ng-model="state.playerCount" />
        <button>Start Test Room</button>
      </form>
    </div>
    <div class="container">
      <div id="gamerooms">
        <div class="room" ng-repeat="(i, room) in state.rooms">
          <a href="{{room.roomURL}}" target="_blank">
            <h2>{{ room.roomName }}</h2>
          </a>
          <div class="form-row">
            <label>Add Player Name</label>
            <input type="text" />
            <button>Add Player To Game</button>
          </div>
          <div class="form-row">
            <button ng-click="room.sendReadyUp()">Send Ready Up All</button>
            <button ng-click="room.sendRoomChoices()">Send Room Choice All</button>
            <button ng-click="room.sendKeyChoices()">Send Turn Key All</button>
            <input type="text" ng-model="room.allCode" />
            <button ng-click="room.sendEnterCode()">Send Code All</button>
          </div>
          <div class="players">
            <div class="player" ng-class="player.isSpy() ? 'spy' : ''" ng-repeat="(j, player) in room.players">
              <h3>{{ player.playerName }}</h3>
              <p class="data">{{ player.slide }}</p>
              <div class="form-row">
                <button ng-click="player.sendReadyUp()">Send Ready Up</button>
              </div>
              <div class="form-row">
                <label>Room Number:</label>
                <input type="number" min="0" max="4" val="0" ng-model="player.response.roomID" />
                <button ng-click="player.sendRoomChoice()">Send Room Choice</button>
              </div>
              <div class="form-row" ng-if="player.isSpy()">
                <label>Key:</label>
                <select ng-model="player.response.keyChoice">
                  <option value="spyKey">Spy Key</option>
                  <option value="agentKey">Agent Key</option>
                </select>
                <button ng-click="player.sendKeyChoice()">Send Key Choice</button>
              </div>
              <div class="form-row">
                <label>Code:</label>
                <input type="text" ng-model="player.response.code" />
                <button ng-click="player.sendEnterCode()">Send Enter Code</button>
              </div>
              <div class="form-row">
                <button ng-click="player.disconnectPlayer()">Disconnect</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

